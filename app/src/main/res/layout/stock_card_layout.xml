<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    >

    <View
        android:id="@+id/drag_handle"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/delete_buttom" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.andrew.androiddevelopment.stockportfolioapp.com.andrew.stockapp.fragments.StockCardFragment"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:padding="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@color/blue">

        <TextView android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Stock Name"
            android:id="@+id/stockNameText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Price"
            android:id="@+id/stockPriceText"
            android:layout_alignBottom="@+id/stockNameText"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="symbol"
            android:id="@+id/stockSymbolText"
            android:layout_alignTop="@+id/stockNameText"
            android:layout_toEndOf="@+id/stockChangeText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="% Change"
            android:id="@+id/stockChangeText"
            android:layout_alignBaseline="@+id/stockPriceText"
            android:layout_alignBottom="@+id/stockPriceText"
            android:layout_toEndOf="@+id/stockNameText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Day Low"
            android:id="@+id/stockDayLowText"
            android:layout_below="@+id/stockPriceText"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Day High"
            android:id="@+id/stockDayHighText"
            android:layout_below="@+id/stockDayLowText"
            android:layout_alignStart="@+id/stockPriceText" />

    </RelativeLayout>
</LinearLayout>